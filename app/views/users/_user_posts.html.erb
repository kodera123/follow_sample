<!-- ↓eachメソッドを用いてツイート一覧を表示しましょう -->
        <% post.each do |p|%>
          <div class="list-group-item">
            <h4 class="user">
              <span class="user-name">
              <!-- ↓ツイートに紐付いたUserのemailの表示 -->
                <strong><%= p.user.name %></strong>
              </span>
              <% if p.user.followed_by? current_user %>
                <%= link_to user_follows_path(p.user), method: :delete, class: "btn btn-xs btn-danger follow-btn" do %>
                  <span class="glyphicon glyphicon-minus"></span> フォローを外す
                <% end %>
              <% else %>
                <%= link_to user_follows_path(p.user), method: :post, class: "btn btn-xs btn-default follow-btn" do %>
                  <span class="glyphicon glyphicon-plus"></span>フォロー
                <% end %>
              <% end %>
              <span class="time pull-right">
              <!-- ↓ツイートした時間の表示をしてます。 -->
                <%= distance_of_time_in_words_to_now(p.created_at)%>
              </span>
              <div class="clear"></div>
            </h4>
            <div class="tweet-content">
              <div class="tweet-body">
                <%= simple_format(p.body) %>
              </div>
              
              <!-- ↓お気に入りボタンの実装（発展課題） -->
              <div class="content-footer">
                <% if p.favorited_by? current_user %>
                  <%= link_to post_favorites_path(p), method: :delete do %>
                  <span class="glyphicon glyphicon-star like-star"  data-toggle="tooltip" data-placement="top" title="いいね"></span>
                  <% end %>
                <% else %>

                  <%= link_to post_favorites_path(p), method: :post do %>
                  <span class="glyphicon glyphicon-star-empty like-star"></span>
                  <% end %>
                <% end %>
              </div>
              <!-- ↑お気に入りボタンの実装（発展課題） -->
            </div>
          </div>
        <% end %>
        <!-- ↑each終わり  endで閉じる -->
      <!-- ↓ページネーションするための記述をしてください -->
      <%#= paginate post %>
      <%= link_to "全てのつぶやき", posts_path %>
      <%= link_to "フォロワーのつぶやき", timeline_posts_path %>