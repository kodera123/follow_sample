<% post.each do |post| %>
	<h4 class="user">
		<span class="user-name">
		  <%= link_to post.user.name, user_path(post.user) %>
		</span>
    <span class="user-id"><%= post.user.name %></span>
	</h4>
	<div class="post-body">
		<%= post.body %>
	</div>
	<div class="body-footer">
      <% if post.favorited_by? current_user %>
        <%= link_to "いいね解除", post_favorites_path(post), method: :delete %>
      <% else %>
        <%= link_to "いいね", post_favorites_path(post), method: :post %>
      <% end %>
      <% if post.user.followed_by? current_user %>
        <%= link_to "フォロー解除", user_follows_path(post.user), method: :delete %>
      <% else %>
        <%= link_to "フォロー", user_follows_path(post.user), method: :post %>
      <% end %>
    </div>  
<% end %>
